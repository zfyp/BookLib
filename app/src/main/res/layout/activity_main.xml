<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看入库读书"
        android:id="@+id/findAllBook"
        android:layout_marginTop="103dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看借出图书"
        android:id="@+id/findOutBook"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/findAllBook"
        android:layout_alignStart="@+id/findAllBook" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看今日借出"
        android:id="@+id/findTodayOut"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/findOutBook"
        android:layout_alignStart="@+id/findOutBook" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="图书总数"
        android:id="@+id/allBook"
        android:layout_below="@+id/findTodayOut"
        android:layout_toStartOf="@+id/findTodayOut"
        android:layout_marginTop="62dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/allBookNum"
        android:layout_alignTop="@+id/allBook"
        android:layout_alignStart="@+id/findTodayOut"
        android:layout_marginStart="29dp"
        android:layout_alignBottom="@+id/allBook"
        android:layout_alignEnd="@+id/findTodayOut" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="剩余图书"
        android:id="@+id/balanceBook"
        android:layout_below="@+id/allBook"
        android:layout_alignStart="@+id/allBook"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/balanceBookNum"
        android:layout_alignTop="@+id/balanceBook"
        android:layout_alignStart="@+id/allBookNum" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="增加图书"
        android:id="@+id/addBooks"
        android:layout_alignParentTop="true"
        android:layout_marginTop="29dp"
        android:layout_alignEnd="@+id/findAllBook"
        android:layout_alignStart="@+id/findAllBook" />
</RelativeLayout>
